function jobbag_roles_access($op, $entity = NULL, $account = NULL, $job_type = NULL) {
  if (!$account) {
    $account = $GLOBALS['user'];
  }

  if ($account->uid == 1) {
    return TRUE;
  }

  if (user_access('administer job roles', $account)) {
    return TRUE;
  }

  return FALSE;
}

